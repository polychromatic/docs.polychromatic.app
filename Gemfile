source "https://rubygems.org"

gem "jekyll"

# Generate XML sitemaps
gem "jekyll-sitemap"

# Always lazy load images
gem "jekyll-loading-lazy"

# Always mark external links with rel="external"
gem "jekyll-external-links"

# HTML proofing (+ dependencies)
gem "html-proofer"
gem "ostruct"
gem "logger"
